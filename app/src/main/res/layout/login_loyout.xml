<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brunofrani.photoapp.activity.LoginActivity">

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="Login"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="211dp" />

    <EditText
        android:id="@+id/user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        android:layout_above="@+id/password_text"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="password"
        android:layout_above="@+id/login_button"
        android:layout_alignLeft="@+id/user_text"
        android:layout_alignStart="@+id/user_text"
        android:layout_marginBottom="128dp" />

    <TextView
        android:id="@+id/register_text"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginBottom="42dp"
        android:text="Register"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
